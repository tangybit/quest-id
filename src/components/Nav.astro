---
const links = [
  { id: 'section1', label: 'Section 1' },
  { id: 'section2', label: 'Section 2' },
  { id: 'section3', label: 'Section 3' },
  { id: 'section4', label: 'Section 4' }
];
---
<nav class="floating-tabs">
  <ul>
    {links.map(link => (
      <li key={link.id}>
        <a href={`#${link.id}`}>{link.label}</a>
      </li>
    ))}
  </ul>
</nav>

<style>
  /* Floating Tabs on the Left */
  .floating-tabs {
    position: fixed;
    top: 50%;
    left: 20px; /* Adjust for desired distance from the left edge */
    transform: translateY(-50%);
  }

  .floating-tabs ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .floating-tabs ul li {
    margin: 10px 0;
  }

  .floating-tabs ul li a {
    display: inline-block;
    padding: 10px 15px;
    color: white;
    text-decoration: none;
    background-color: transparent;
    border: 2px solid white;
    border-radius: 50%;
    transition: background-color 0.3s, transform 0.2s;
  }

  .floating-tabs ul li a:hover {
    background-color: white;
    color: #333;
    transform: scale(1.1);
  }

  .floating-tabs ul li a.active {
    background-color: #777;
    color: white;
  }
</style>

