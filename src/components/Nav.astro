---
const links = [
  { id: 'fish', label: 'Fishes', path: '#fish' },
  { id: 'invert', label: 'Invertebrates', path: '#invert' },
  { id: 'limu', label: 'Limu', path: '#limu' },
  { id: 'all', label: 'All Species', path: '#all' },
  { id: 'random-100', label: 'Random 100', path: '#random-100' }
];

// Destructure the props passed down from BaseLayout
const { activeSection, onNavClick } = Astro.props;
---
<nav class="floating-tabs">
  <ul>
    {links.map(link => (
      <li key={link.id}>
        <a 
          href={link.path} 
          data-section={link.id} 
          onClick={(e) => onNavClick(e, link.id)} 
          class={activeSection === link.id ? 'active' : ''}
        >
          {link.label}
        </a>
      </li>
    ))}
  </ul>
</nav>

<style>
  /* Floating Tabs on the Left */
  .floating-tabs {
    position: fixed;
    top: 50%;
    left: 20px; /* Adjust for desired distance from the left edge */
    transform: translateY(-50%);
  }

  .floating-tabs ul {
    list-style-type: none;
    padding: 0;
    margin: 0;
  }

  .floating-tabs ul li {
    margin: 10px 0;
  }

  .floating-tabs ul li a {
    display: inline-block;
    padding: 10px 15px;
    color: white;
    text-decoration: none;
    background-color: transparent;
    border: 2px solid white;
    border-radius: 50%;
    transition: background-color 0.3s, transform 0.2s;
  }

  .floating-tabs ul li a:hover {
    background-color: white;
    color: #333;
    transform: scale(1.1);
  }

  .floating-tabs ul li a.active {
    background-color: #777;
    color: white;
  }
</style>
