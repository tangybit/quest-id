---
const { id, text, onClick, display = 'inline-block', disabled = false, className = '', iconSrc } = Astro.props;
---

<button
  id={id}
  class={`btn ${className}`}  // Default class 'btn' added
  style={`display: ${display};`}
  disabled={disabled}
  onClick={() => {
    console.log('Button clicked:', id); 
    if (onClick) onClick();
  }}>
  {iconSrc && <img src={iconSrc} alt={text} class="button-icon" />}
  {text}
</button>

<style>

.button-container {
    display: flex;
    justify-content: center; /* Center the buttons in the container */
    margin-top: 20px; /* Add some space above the button container */
}

.btn {
    width: 100px; 
    height: 50px;
    background-color: #4CAF50; 
    border-radius: 25px; 
    display: flex; 
    align-items: center; 
    justify-content: center; 
    border: none; 
    cursor: pointer;
    transition: background-color 0.3s; 
    font-size: 14px; 
    color: white; 
    font-weight: bold; 
    margin: 10px;
    text-transform: uppercase;
}

.btn:hover {
    background-color: #45a049; /* Darker shade on hover */
}

</style>